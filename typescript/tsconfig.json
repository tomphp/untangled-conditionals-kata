{
  "compilerOptions": {
    "outDir": "build",
    "module": "umd",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
